#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

echo "### Mac OS X: upgrade..."
sudo softwareupdate -ia
echo "done!"

echo "### homebrew: update..."
brew update
echo "done!"

echo "### homebrew: doctor..."
brew doctor
echo "done!"

echo "### homebrew: upgrade all outdated brew packages..."
brew upgrade
echo "done!"

echo "### homebrew: upgrade all outdated brew cask packages..."
brew upgrade --cask
echo "done!"

echo "### homebrew: remove dead symlinks from the Homebrew prefix"
brew cleanup
echo "done!"
